<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="isfehka.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <t t-if="props.receipt.hkaPdfImage">
                <div class="pos-receipt-hka-pdf">
                    <img t-att-src="props.receipt.hkaPdfImage" style="width: 100%; height: auto;"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
