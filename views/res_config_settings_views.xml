<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings Action -->
    <record id="action_isfehka_config" model="ir.actions.act_window">
        <field name="name">Electronic Invoice Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'isfehka'}</field>
    </record>

    <!-- Settings View -->
    <record id="res_config_settings_view_form_isfehka" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.isfehka</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <block title="Electronic Invoicing" name="isfehka_settings">
                    <setting string="HKA Electronic Invoicing" help="Configure HKA electronic invoicing integration">
                        <!-- Test Mode Field -->
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Test Mode" for="isfehka_test_mode" class="col-lg-3 o_light_label"/>
                                <field name="isfehka_test_mode"/>
                            </div>
                        </div>

                        <!-- HKA Credentials Fields -->
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Company Token" for="isfehka_token_empresa" class="col-lg-3 o_light_label"/>
                                <field name="isfehka_token_empresa" password="True"/>
                            </div>
                            <div class="row mt16">
                                <label string="Password" for="isfehka_token_password" class="col-lg-3 o_light_label"/>
                                <field name="isfehka_token_password" password="True"/>
                            </div>
                            <div class="row mt16">
                                <label string="WSDL URL" for="isfehka_wsdl_url" class="col-lg-3 o_light_label"/>
                                <field name="isfehka_wsdl_url"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>