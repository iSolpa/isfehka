<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings Action -->
    <record id="action_isfehka_config" model="ir.actions.act_window">
        <field name="name">Electronic Invoice Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'isfehka'}</field>
    </record>

    <!-- Settings View -->
    <record id="res_config_settings_view_form_isfehka" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.isfehka</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <!-- Electronic Invoicing Section -->
                <setting id="isfehka_settings" string="HKA Electronic Invoicing" data-key="isfehka">
                    <h2>HKA Electronic Invoicing</h2>
                    <div class="row mt16">
                        <!-- Test Mode Field -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="isfehka_test_mode"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="isfehka_test_mode"/>
                                <div class="text-muted">
                                    Enable test mode for development environment
                                </div>
                            </div>
                        </div>

                        <!-- HKA Credentials Fields -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">HKA Credentials</span>
                                <div class="text-muted">
                                    Configure credentials for HKA service
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-lg-3 o_light_label" for="isfehka_token_empresa">Company Token</label>
                                        <field name="isfehka_token_empresa" password="True"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="col-lg-3 o_light_label" for="isfehka_token_password">Password</label>
                                        <field name="isfehka_token_password" password="True"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="col-lg-3 o_light_label" for="isfehka_wsdl_url">WSDL URL</label>
                                        <field name="isfehka_wsdl_url"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>