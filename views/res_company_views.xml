<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_isfehka" model="ir.ui.view">
        <field name="name">res.company.form.inherit.isfehka</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                    <page string="HKA Configuration" name="hka_config">
                        <group>
                            <field name="hka_branch_code"/>
                            <field name="hka_pos_code"/>
                        </group>
                    </page>
            </xpath>
        </field>
    </record>
</odoo>