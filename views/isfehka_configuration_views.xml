<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isfehka_configuration_tree" model="ir.ui.view">
        <field name="name">isfehka.configuration.tree</field>
        <field name="model">isfehka.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="test_mode"/>
                <field name="wsdl_url"/>
                <field name="default_tipo_documento"/>
                <field name="next_number"/>
            </tree>
        </field>
    </record>

    <record id="view_isfehka_configuration_form" model="ir.ui.view">
        <field name="name">isfehka.configuration.form</field>
        <field name="model">isfehka.configuration</field>
        <field name="arch" type="xml">
            <form string="HKA Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="token_empresa" password="True"/>
                        <field name="token_password" password="True"/>
                    </group>
                    <group>
                        <field name="wsdl_url"/>
                        <field name="test_mode"/>
                        <field name="default_tipo_documento"/>
                        <field name="next_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_isfehka_configuration" model="ir.actions.act_window">
        <field name="name">HKA Configuration Sets</field>
        <field name="res_model">isfehka.configuration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure conjuntos de credenciales y compártalos entre compañías.
            </p>
        </field>
    </record>

    <menuitem id="menu_isfehka_configuration_sets"
              name="Conjuntos de Configuración"
              parent="menu_isfehka_config"
              action="action_isfehka_configuration"
              sequence="5"
              groups="isfehka.group_isfehka_manager"/>
</odoo>
